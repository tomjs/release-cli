{
  "name": "@tomjs/release-cli",
  "type": "module",
  "version": "4.5.2",
  "packageManager": "pnpm@10.10.0",
  "description": "A CLI tool to automatically publish npm packages.",
  "author": {
    "name": "Tom Gao",
    "email": "tom@tomgao.cc"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomjs/release-cli.git"
  },
  "keywords": [
    "cli",
    "release",
    "version",
    "changelog",
    "publish"
  ],
  "types": "./index.d.ts",
  "bin": {
    "rc": "./dist/index.js",
    "release-cli": "./dist/index.js"
  },
  "files": [
    "dist",
    "index.d.ts"
  ],
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest",
    "lint": "eslint --fix",
    "prepare": "simple-git-hooks",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@antfu/eslint-config": "^4.13.0",
    "@manypkg/get-packages": "^2.2.1",
    "@tomjs/logger": "^1.2.0",
    "@tomjs/pkg": "^1.0.4",
    "chalk": "^5.4.1",
    "cosmiconfig": "^9.0.0",
    "dayjs": "^1.11.13",
    "execa": "^9.5.3",
    "hosted-git-info": "^7.0.2",
    "inquirer": "9.2.17",
    "is-subdir": "^1.2.0",
    "log-symbols": "^6.0.0",
    "meow": "^13.2.0",
    "open": "^10.1.2",
    "ora": "^8.2.0",
    "publint": "^0.3.12",
    "semver": "^7.7.1",
    "strip-ansi": "^7.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@tomjs/commitlint": "^4.0.0",
    "@tomjs/eslint": "^5.0.0",
    "@tomjs/tsconfig": "^1.7.2",
    "@types/hosted-git-info": "^3.0.5",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^18.19.100",
    "@types/semver": "^7.7.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.26.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "simple-git-hooks": "^2.13.0",
    "tsup": "^8.4.0",
    "tsx": "^4.19.4",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.3"
  }
}
